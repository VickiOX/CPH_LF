---
const {title} = Astro.props;

---

<div>
    <div class="flex"> 
        <h2> {title} </h2>
    </div>
    <div class="Card_grid">
        <slot />
    </div>
</div>

<style>
    .Card_grid{
        display: grid;
        grid-template-columns: repeat(auto-fill, 300px);
        gap:2rem;
    }

    h2{
        text-align: center;
    }
</style>