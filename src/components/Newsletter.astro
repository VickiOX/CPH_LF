---
import "../css/style.css";
import RadioButtonsNews from "./RadioButtonsNews.astro";
---

<article>
    <div>
        <h3>NYHEDSBREV</h3>
            <form>
                <label for="email">E-mail adresse</label>
                <input type="text" id="email" name="email">
                <label for="first_name">Dit navn</label>
                <input type="text" id="first_name" name="first_name">
                <label for="last_name">Dit efternavn</label>
                <input type="text" id="last_name" name="last_name">
            </form>
            <RadioButtonsNews/>
    </div>
    <button class="button_1">Tilmeld</button>
    <button class="button_2">Tilmeld nyhedsbrev</button>

</article>


<style>

    article, form{
        display: flex;
        flex-direction: column;
    }

    input[type=text], select {
        padding: 12px 20px;
        margin: 8px 0;
        display: inline-block;
        border: 2px solid #003866;
        background-color: #3b3b3b;
    }

    label{
        color: #d9d9d9;
    }

    input[type=text]{
        margin-bottom: 15px;
    }

    button{
        padding: 13px 43px;
        text-decoration: none;
        background-color: #D9D9D9;
        border-radius: 25px;
        font-size: 16px;
        color: #252525;  
        z-index: 2;
        width: 150px;
        height: 45px;
        margin: 20%;
    }

    .button_2{
        display: none;
    }



    button:hover{
        background-color: #252525;
        color: #D9D9D9; 
        scale:1.08;
    }

    @media screen and (max-width: 800px){
        div{
            display: none;
        }

        button{
            padding: 3px 20px;
            width: 150px;
            height: 45px;
            margin-right: 30px;
        }

        .button_1{
            display: none;
        }

        .button_2{
            display: block;
        }

    }

</style>